<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/citta"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/testo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="180dp"
        android:background="#0023d2"
        android:text="Civic Sense \nl'app per segnalare problemi presenti a Taranto"
        android:textAlignment="center"
        android:textColor="#6495ed"
        android:textFontWeight="100sp"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="269dp"
        android:background="#2190d4"
        android:padding="5sp"
        android:text="Segnala un problema"
        android:textColor="#030200"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/esci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="334dp"
        android:background="#2190d4"
        android:padding="5sp"
        android:text="Esci"
        android:textColor="#030200"
        android:textStyle="bold|italic" />

</RelativeLayout>